<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.free.duangjike.FridayActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_picture_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/jikeYellow">
        <TextView
            android:id="@+id/tv_is_friday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="80sp"
            android:text="是"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/tv_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_is_friday"
            android:layout_marginTop="20dp"
            android:text="Friday 2018.12.7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/tv_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="今天是周五吗？"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/tv_is_friday"
            android:layout_marginBottom="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/white"
            android:padding="20dp"
            android:textColor="#000"/>
        <info.free.duangjike.TriangleView
            android:layout_width="10dp"
            android:layout_height="6dp"
            app:trv_direction="bottom"
            app:trv_color="@color/white"
            app:layout_constraintTop_toBottomOf="@id/tv_question"
            app:layout_constraintStart_toStartOf="@id/tv_question"
            app:layout_constraintEnd_toEndOf="@id/tv_question"/>
    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.Group
        android:id="@+id/gp_controller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids=""/>

    <View
        android:id="@+id/v_controller_container"
        android:layout_width="0dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/jikeYellow"
        android:alpha="0.5"/>
    <TextView
        android:id="@+id/tv_face_type_song"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="@id/v_controller_container"
        app:layout_constraintTop_toTopOf="@id/v_controller_container"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="宋"
        android:gravity="center"
        android:textSize="16sp"
        android:padding="4dp"
        android:textColor="@color/white"
        android:background="@color/jikeBlue"/>
    <TextView
        android:id="@+id/tv_face_type_kai"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@id/tv_face_type_song"
        app:layout_constraintTop_toTopOf="@id/v_controller_container"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="楷"
        android:gravity="center"
        android:textSize="16sp"
        android:padding="4dp"
        android:textColor="@color/white"
        android:background="@color/jikeBlue"/>
    <TextView
        android:id="@+id/tv_size_square"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="正方形"
        android:gravity="center"
        android:textSize="16sp"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_face_type_song"
        app:layout_constraintStart_toStartOf="@id/v_controller_container"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:background="@color/jikeBlue"/>
    <TextView
        android:id="@+id/tv_size_full"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="全屏幕"
        android:gravity="center"
        android:textSize="16sp"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_face_type_song"
        app:layout_constraintStart_toEndOf="@id/tv_size_square"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:background="@color/jikeBlue"/>
    <ImageView
        android:id="@+id/iv_hide_controller"
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:src="@drawable/ic_common_arrow_down"
        app:layout_constraintTop_toTopOf="@id/v_controller_container"
        app:layout_constraintEnd_toEndOf="@id/v_controller_container"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/tv_set_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设为锁屏"
        app:layout_constraintStart_toStartOf="@id/v_controller_container"
        app:layout_constraintEnd_toStartOf="@+id/tv_save"
        app:layout_constraintTop_toBottomOf="@id/tv_size_square"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        />
    <TextView
        android:id="@+id/tv_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存图片"
        app:layout_constraintStart_toEndOf="@id/tv_set_lock"
        app:layout_constraintEnd_toEndOf="@id/v_controller_container"
        app:layout_constraintTop_toBottomOf="@id/tv_size_square"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        />
</android.support.constraint.ConstraintLayout>
